
%h1= "Information on class #{@classroom.name}"

%h4= "Class Type: #{@classroom.class_type}"
%h4= "Program: #{@classroom.program}"
%h4= "Start Date: #{@classroom.start_date}"
%h4= "End Date: #{@classroom.end_date}"

%div.container
  %table{:id => 'roster', :class => 'table-striped'}
    %thead
      %tr
        %th Name
        %th Pre-test score
        %th Post-test score
    %tbody
      - @classroom.students.each do |student|
        %tr
          %td= link_to student.name, teacher_classroom_student_path(@teacher.id, @classroom.id, :student_id => student.id)
          %td= student.get_survey_score('pre')
          %td= student.get_survey_score('post')

= link_to "Administer pre-test", teacher_classroom_path + "/create_link"
