
%h1= "Welcome #{@teacher.name}, here is a list of your classes"

%table#classes
  %thead
    %tr
      %th Name
      %th Program
      %th Class Type
      %th Start Date
      %th End Date
  %tbody
    - @teacher.classrooms.each do |classroom|
      %tr
        %td= classroom.name
        %td= classroom.program
        %td= classroom.class_type
        %td= classroom.start_date.to_s
        %td= classroom.end_date.to_s

= link_to 'Add new class', new_teacher_classroom_path(@teacher)


