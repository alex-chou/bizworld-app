%div#wrapper

  -if @teacher.admin?
    = render :partial => "shared/navbar_admin"
  -else
    = render :partial => "shared/navbar"  

  %div#page-wrapper

    %div#row
      %div#col-lg-12
        %h1#page-header #{@student.name}
        %h2#page-header #{@student.school_name}
        %h2#page-header #{@student.teacher_name}
        %h2#page-header #{@student.city_name}
        %h2#page-header #{@student.state}
        %h2#page-header #{@student.grade}
        %h2#page-header #{@student.gender}
        %h2#page-header #{@student.ethnicity}

    %div#row
      %div#col-lg-12
        %div.panel.panel-default
          %div.panel-body
            %div.dataTable_wrapper
              %div.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
                %div.row
                  %div.col-sm-12
                    %table.table.table-striped.table-bordered.table-hover.dataTable.no-footer
                      %thead
                        %tr
                          %th Question
                          %th Pre-Choice
                          %th Post-Choice
                          %th Correct-Choice
                      %tbody
                        -@pre_questions.zip(@post_questions).each do |pre, post|
                          %tr
                            %td= pre.question
                            %td= pre.answer
                            %td= post.answer
                            %td= pre.key
 
    = link_to "Add new class", new_classroom_path

